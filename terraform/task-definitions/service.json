[
    {
        "name":             "listener",
        "image":            "${image}",
        "logConfiguration": {
            "logDriver": "awslogs",
            "options":   {
                "awslogs-group":         "/ecs/rabbitmq-now-forwarder",
                "awslogs-region":        "us-east-1",
                "awslogs-stream-prefix": "ecs-rnf"
            }
        },
        "secrets": [
            {"name": "MONGO_URL", "valueFrom": "${mongo_url_secret_arn}"}
        ],
        "essential":        true,
        "cpu":              512,
        "memory":           1024
    }
]
